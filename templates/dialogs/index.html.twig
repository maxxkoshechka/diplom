{% extends 'base.html.twig' %}

{% block title %}Hello DialogsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <div><a href="{{ path('add_dialog') }}">Создать диалог</a></div>
    <div>
        <ul>
            {% for dialog in dialogs %}
                <li>
                    <div class="row">
                        <div class="col">
                            <a href="{{ path('dialog', {'id':dialog.id}) }}">{{ dialog }}</a>
                        </div>
                        <div class="col">
                            <a href="{{ path('dialog_delete', {'id':dialog.id}) }}"><i class="fa fa-trash" aria-hidden="true"></i></a>
                        </div>
                    </div>
                </li>
            {% endfor %}

        </ul>

    </div>

</div>
{% endblock %}
