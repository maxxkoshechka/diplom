<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,500,500i,600,600i&display=swap" rel="stylesheet" />
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header class="header">
            <h1 class="sr-only">
                CryptoDialogs
            </h1>

            <nav class="navbar navbar-expand-xl navbar-light bg-light">
                <div class="container mt-4 mb-3">
                    <a class="navbar-brand mr-4 pr-2" href="{{ path('index') }}">
                        CryptoDialogs
                    </a>

                    <div class="collapse navbar-collapse" id="header-menu">
                        <ul class="navbar-nav ml-auto">
                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                <li class="nav-item mr-3">
                                    <span class="nav-link">
                                        {{ app.user.email }}
                                    </span>
                                </li>
                                <li class="nav-item mr-3">
                                    <a class="nav-link" href="{{ path('dialogs') }}">
                                        Диалоги
                                    </a>
                                </li>
                                <li class="nav-item mr-3">
                                    <a class="nav-link" href="{{ path('app_logout') }}">
                                        Выйти
                                    </a>
                                </li>
                            {% else %}
                                <li class="nav-item mr-3">
                                    <a class="nav-link" href="{{ path('app_login') }}">
                                        Войти
                                    </a>
                                </li>
                                <li class="nav-item mr-3">
                                    <a class="nav-link" href="{{ path('app_register') }}">
                                        Зарегистрироваться
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>

        </header>

        <main role="main" class="container mt-5">
            {% block body %}{% endblock %}
        </main>

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="https://kit.fontawesome.com/d72edcf4c5.js" crossorigin="anonymous"></script>
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
            <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/i18n/ru.js"></script>
            <script src="{{ asset('bundles/tetranzselect2entity/js/select2entity.js') }}"></script>
        {% endblock %}
    </body>
</html>
